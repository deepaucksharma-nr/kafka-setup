{
  "name": "Application Performance Dashboard",
  "description": "Comprehensive monitoring dashboard for application performance and health",
  "permissions": "PUBLIC_READ_WRITE",
  "pages": [
    {
      "name": "Overview",
      "description": "Application health and performance overview",
      "widgets": [
        {
          "title": "Application Response Time",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 1,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(duration) FROM Transaction WHERE appName = 'YOUR_APP_NAME' TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Throughput (RPM)",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 5,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT rate(count(*), 1 minute) FROM Transaction WHERE appName = 'YOUR_APP_NAME' TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Error Rate",
          "visualization": {
            "id": "viz.billboard"
          },
          "layout": {
            "column": 9,
            "row": 1,
            "height": 3,
            "width": 4
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT percentage(count(*), WHERE error IS true) AS 'Error Rate' FROM Transaction WHERE appName = 'YOUR_APP_NAME' SINCE 1 hour ago"
              }
            ],
            "thresholds": [
              {
                "alertSeverity": "WARNING",
                "value": 1
              },
              {
                "alertSeverity": "CRITICAL",
                "value": 5
              }
            ]
          }
        },
        {
          "title": "Top 5 Transactions by Time",
          "visualization": {
            "id": "viz.table"
          },
          "layout": {
            "column": 1,
            "row": 4,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(duration) AS 'Avg Duration (ms)', count(*) AS 'Count' FROM Transaction WHERE appName = 'YOUR_APP_NAME' FACET name LIMIT 5 SINCE 1 hour ago"
              }
            ]
          }
        },
        {
          "title": "Database Query Performance",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 7,
            "row": 4,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(databaseDuration) AS 'DB Time', average(duration) AS 'Total Time' FROM Transaction WHERE appName = 'YOUR_APP_NAME' AND databaseDuration IS NOT NULL TIMESERIES AUTO"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Infrastructure",
      "description": "Server and infrastructure metrics",
      "widgets": [
        {
          "title": "CPU Usage %",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 1,
            "row": 1,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(cpuPercent) FROM SystemSample WHERE hostname LIKE '%YOUR_HOST_PATTERN%' TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Memory Usage %",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 7,
            "row": 1,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(memoryUsedPercent) FROM SystemSample WHERE hostname LIKE '%YOUR_HOST_PATTERN%' TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Disk I/O",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 1,
            "row": 4,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(diskReadBytesPerSecond) AS 'Read', average(diskWriteBytesPerSecond) AS 'Write' FROM SystemSample WHERE hostname LIKE '%YOUR_HOST_PATTERN%' TIMESERIES AUTO"
              }
            ]
          }
        },
        {
          "title": "Network I/O",
          "visualization": {
            "id": "viz.line"
          },
          "layout": {
            "column": 7,
            "row": 4,
            "height": 3,
            "width": 6
          },
          "configuration": {
            "nrqlQueries": [
              {
                "accountId": "YOUR_ACCOUNT_ID",
                "query": "SELECT average(receiveBytesPerSecond) AS 'Receive', average(transmitBytesPerSecond) AS 'Transmit' FROM NetworkSample WHERE hostname LIKE '%YOUR_HOST_PATTERN%' TIMESERIES AUTO"
              }
            ]
          }
        }
      ]
    }
  ]
}